@model TofasRandevu.ViewModels.ResultViewModel

@section Styles{
    <style>
        label {
            font-size: 13px;
        }
    </style>
}
<form class="f1">
    <h2>SERVİS RANDEVUSU</h2>
    <div class="f1-steps">
        <div class="f1-progress">
            <div class="f1-progress-line" data-now-value="100" data-number-of-steps="4" style="width: 100%;"></div>
        </div>
        <div class="f1-step active">
            <p>Kişisel Bilgilerin Girilmesi</p>
            <div class="f1-step-icon">1</div>
        </div>
        <div class="f1-step active">
            <p>Randevu Tarihi ve Servis Seçimi</p>
            <div class="f1-step-icon">2</div>
        </div>
        <div class="f1-step active">
            <p>Servis Danışmanı Seçimi</p>
            <div class="f1-step-icon">3</div>
        </div>
        <div class="f1-step active">
            <p>Servis Bakım Detayları Girişi</p>
            <div class="f1-step-icon">4</div>
        </div>
    </div>
    @{

        if (Model.Status == true)
        {
            <fieldset>
                <h4>işlem Başarılı</h4>
                <h4>Randevu Bilgileriniz</h4>
                <div class="form-group">
                    <label class="sr-only-focusable" for="y">İl</label>
                    <input type="text" id="y" name="y" class="form-control" value="@Model.CityName" readonly>
                </div>
                <div class="form-group">
                    <label class="sr-only-focusable" for="x">Servis Adı</label>
                    <input type="text" name="x" id="x" class="form-control" value="@Model.ServiceName" readonly>
                </div>
                <div class="form-group">
                    <label class="sr-only-focusable" for="y">Servis Danışmanı</label>
                    <input type="text" id="y" name="y" class="form-control" value="@Model.RepresentativeName" readonly>
                </div>
                <div class="form-group">
                    <label class="sr-only-focusable" for="y">Tarih</label>
                    <input type="text" id="y" name="y" class="form-control" value="@Model.Date" readonly>
                </div>

            </fieldset>

        }
        else
        {
            <fieldset>
                <h4>İşlem Başarısız</h4>
            </fieldset>
        }

    }
</form>
